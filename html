                        <div class="stat-label">Jours de suite</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number" id="completionRate">0%</div>
                        <div class="stat-label">Taux de compl√©tion</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number" id="totalExercises">0</div>
                        <div class="stat-label">Exercices compl√©t√©s</div>
                    </div>
                </div>

                <div class="chart-container">
                    <h3>üìà Activit√© des 7 derniers jours</h3>
                    <canvas id="weeklyChart"></canvas>
                </div>

                <div class="chart-container">
                    <h3>üéØ Progression par programme</h3>
                    <canvas id="programChart"></canvas>
                </div>
            </div>

            <!-- Notes Section -->
            <div class="notes-section">
                <h3>üìù Journal de progression</h3>
                <textarea id="progressNotes" placeholder="Tes objectifs, tes r√©ussites, tes observations..."></textarea>
                <button class="btn" style="margin-top: 15px;" id="saveProgressNotes">Sauvegarder</button>
                <div id="progressSavedNotes"></div>
            </div>
        </div>
    </div>

    <button class="reset-btn" id="resetAll">üî• Reset All</button>

    <script>
        // ============ TAB NAVIGATION ============
        const navTabs = document.querySelectorAll('.nav-tab');
        const tabContents = document.querySelectorAll('.tab-content');

        navTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const targetTab = tab.getAttribute('data-tab');
                
                navTabs.forEach(t => t.classList.remove('active'));
                tabContents.forEach(c => c.classList.remove('active'));
                
                tab.classList.add('active');
                document.getElementById(targetTab).classList.add('active');
            });
        });

        // ============ WEEK SELECTOR ============
        const weekBtns = document.querySelectorAll('.week-btn');
        const weekContents = document.querySelectorAll('.week-content');

        weekBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const targetWeek = btn.getAttribute('data-week');
                
                weekBtns.forEach(b => b.classList.remove('active'));
                weekContents.forEach(w => w.style.display = 'none');
                
                btn.classList.add('active');
                document.getElementById('week' + targetWeek).style.display = 'block';
            });
        });

        // ============ DAY SELECTOR ============
        const dayBtns = document.querySelectorAll('.day-btn');
        const dayContents = document.querySelectorAll('.day-content');

        dayBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const targetDay = btn.getAttribute('data-day');
                
                dayBtns.forEach(b => b.classList.remove('active'));
                dayContents.forEach(d => d.style.display = 'none');
                
                btn.classList.add('active');
                document.getElementById(targetDay).style.display = 'block';
            });
        });

        // ============ CHECKBOX PERSISTENCE ============
        const checkboxes = document.querySelectorAll('input[type="checkbox"]');

        function saveCheckboxState() {
            const checkboxState = {};
            checkboxes.forEach(cb => {
                if (cb.getAttribute('data-exercise')) {
                    checkboxState[cb.getAttribute('data-exercise')] = cb.checked;
                }
            });
            localStorage.setItem('checkboxState', JSON.stringify(checkboxState));
            updateStats();
        }

        function loadCheckboxState() {
            const saved = localStorage.getItem('checkboxState');
            if (saved) {
                const checkboxState = JSON.parse(saved);
                checkboxes.forEach(cb => {
                    const exerciseId = cb.getAttribute('data-exercise');
                    if (exerciseId && checkboxState[exerciseId]) {
                        cb.checked = true;
                    }
                });
            }
        }

        checkboxes.forEach(cb => {
            cb.addEventListener('change', saveCheckboxState);
        });

        // ============ TIMER ============
        let timerInterval;
        let seconds = 0;
        let isRunning = false;

        const timerDisplay = document.getElementById('timerDisplay');
        const startBtn = document.getElementById('startBtn');
        const pauseBtn = document.getElementById('pauseBtn');
        const resetBtn = document.getElementById('resetBtn');

        function updateTimerDisplay() {
            const mins = Math.floor(seconds / 60);
            const secs = seconds % 60;
            timerDisplay.textContent = `${String(mins).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
        }

        startBtn.addEventListener('click', () => {
            if (!isRunning) {
                isRunning = true;
                timerInterval = setInterval(() => {
                    seconds++;
                    updateTimerDisplay();
                }, 1000);
            }
        });

        pauseBtn.addEventListener('click', () => {
            isRunning = false;
            clearInterval(timerInterval);
        });

        resetBtn.addEventListener('click', () => {
            isRunning = false;
            clearInterval(timerInterval);
            seconds = 0;
            updateTimerDisplay();
        });

        // Preset timers
        document.getElementById('set30').addEventListener('click', () => {
            seconds = 30;
            updateTimerDisplay();
        });

        document.getElementById('set40').addEventListener('click', () => {
            seconds = 40;
            updateTimerDisplay();
        });

        document.getElementById('set2min').addEventListener('click', () => {
            seconds = 120;
            updateTimerDisplay();
        });

        // ============ NOTES SYSTEM ============
        function setupNotes(textareaId, saveBtnId, savedNotesId, storageKey) {
            const textarea = document.getElementById(textareaId);
            const saveBtn = document.getElementById(saveBtnId);
            const savedNotesDiv = document.getElementById(savedNotesId);

            // Load saved notes
            const saved = localStorage.getItem(storageKey);
            if (saved) {
                const notes = JSON.parse(saved);
                savedNotesDiv.innerHTML = notes.map(note => 
                    `<div class="saved-notes">
                        <strong>${note.date}</strong><br>${note.text}
                    </div>`
                ).join('');
            }

            saveBtn.addEventListener('click', () => {
                const text = textarea.value.trim();
                if (text) {
                    const notes = JSON.parse(localStorage.getItem(storageKey) || '[]');
                    notes.unshift({
                        date: new Date().toLocaleDateString('fr-FR'),
                        text: text
                    });
                    localStorage.setItem(storageKey, JSON.stringify(notes));
                    textarea.value = '';
                    
                    savedNotesDiv.innerHTML = notes.map(note => 
                        `<div class="saved-notes">
                            <strong>${note.date}</strong><br>${note.text}
                        </div>`
                    ).join('');
                }
            });
        }

        setupNotes('calisthenicNotes', 'saveCalisthenicNotes', 'calisthenicSavedNotes', 'calisthenicNotes');
        setupNotes('mewingNotes', 'saveMewingNotes', 'mewingSavedNotes', 'mewingNotes');
        setupNotes('nutritionNotes', 'saveNutritionNotes', 'nutritionSavedNotes', 'nutritionNotes');
        setupNotes('progressNotes', 'saveProgressNotes', 'progressSavedNotes', 'progressNotes');

        // ============ STATS & CHARTS ============
        function updateStats() {
            const checkboxState = JSON.parse(localStorage.getItem('checkboxState') || '{}');
            const totalChecked = Object.values(checkboxState).filter(v => v).length;
            const totalCheckboxes = checkboxes.length;
            
            document.getElementById('totalExercises').textContent = totalChecked;
            document.getElementById('completionRate').textContent = 
                totalCheckboxes > 0 ? Math.round((totalChecked / totalCheckboxes) * 100) + '%' : '0%';

            // Simple workout count (days with any activity)
            const workoutDays = JSON.parse(localStorage.getItem('workoutDays') || '[]');
            document.getElementById('totalWorkouts').textContent = workoutDays.length;
            
            // Streak calculation
            const today = new Date().toDateString();
            let streak = 0;
            const sortedDays = workoutDays.sort((a, b) => new Date(b) - new Date(a));
            
            for (let i = 0; i < sortedDays.length; i++) {
                const dayDate = new Date(sortedDays[i]);
                const expectedDate = new Date();
                expectedDate.setDate(expectedDate.getDate() - i);
                
                if (dayDate.toDateString() === expectedDate.toDateString()) {
                    streak++;
                } else {
                    break;
                }
            }
            document.getElementById('weekStreak').textContent = streak;
        }

        // Track workout completion
        checkboxes.forEach(cb => {
            cb.addEventListener('change', () => {
                if (cb.checked) {
                    const workoutDays = JSON.parse(localStorage.getItem('workoutDays') || '[]');
                    const today = new Date().toDateString();
                    if (!workoutDays.includes(today)) {
                        workoutDays.push(today);
                        localStorage.setItem('workoutDays', JSON.stringify(workoutDays));
                    }
                }
                updateStats();
            });
        });

        // Charts
        const weeklyCtx = document.getElementById('weeklyChart').getContext('2d');
        const programCtx = document.getElementById('programChart').getContext('2d');

        function generateWeeklyData() {
            const workoutDays = JSON.parse(localStorage.getItem('workoutDays') || '[]');
            const labels = [];
            const data = [];
            
            for (let i = 6; i >= 0; i--) {
                const date = new Date();
                date.setDate(date.getDate() - i);
                labels.push(date.toLocaleDateString('fr-FR', { weekday: 'short' }));
                
                const count = workoutDays.filter(d => 
                    new Date(d).toDateString() === date.toDateString()
                ).length;
                data.push(count > 0 ? 1 : 0);
            }
            
            return { labels, data };
        }

        const weeklyData = generateWeeklyData();

        new Chart(weeklyCtx, {
            type: 'bar',
            data: {
                labels: weeklyData.labels,
                datasets: [{
                    label: 'S√©ances effectu√©es',
                    data: weeklyData.data,
                    backgroundColor: 'rgba(57, 255, 20, 0.6)',
                    borderColor: 'rgba(57, 255, 20, 1)',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 1,
                        ticks: { color: '#fff' },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    },
                    x: {
                        ticks: { color: '#fff' },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    }
                },
                plugins: {
                    legend: { labels: { color: '#fff' } }
                }
            }
        });

        // Program progress chart
        function getProgramProgress() {
            const checkboxState = JSON.parse(localStorage.getItem('checkboxState') || '{}');
            
            const calisthenics = Object.keys(checkboxState).filter(k => k.startsWith('w')).length;
            const calisChecked = Object.entries(checkboxState).filter(([k, v]) => k.startsWith('w') && v).length;
            
            const neck = Object.keys(checkboxState).filter(k => k.includes('neck') || k.includes('trap')).length;
            const neckChecked = Object.entries(checkboxState).filter(([k, v]) => (k.includes('neck') || k.includes('trap')) && v).length;
            
            const nutrition = Object.keys(checkboxState).filter(k => k.includes('lun') || k.includes('mar') || k.includes('mer')).length;
            const nutritionChecked = Object.entries(checkboxState).filter(([k, v]) => (k.includes('lun') || k.includes('mar') || k.includes('mer')) && v).length;
            
            return {
                calisthenics: calisthenics > 0 ? Math.round((calisChecked / calisthenics) * 100) : 0,
                neck: neck > 0 ? Math.round((neckChecked / neck) * 100) : 0,
                nutrition: nutrition > 0 ? Math.round((nutritionChecked / nutrition) * 100) : 0
            };
        }

        const programProgress = getProgramProgress();

        new Chart(programCtx, {
            type: 'doughnut',
            data: {
                labels: ['Callisth√©nie', 'Mewing/Cou', 'Nutrition'],
                datasets: [{
                    data: [programProgress.calisthenics, programProgress.neck, programProgress.nutrition],
                    backgroundColor: [
                        'rgba(57, 255, 20, 0.8)',
                        'rgba(0, 255, 255, 0.8)',
                        'rgba(255, 215, 0, 0.8)'
                    ],
                    borderColor: [
                        'rgba(57, 255, 20, 1)',
                        'rgba(0, 255, 255, 1)',
                        'rgba(255, 215, 0, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { labels: { color: '#fff', font: { size: 14 } } }
                }
            }
        });

        // ============ RESET ALL ============
        document.getElementById('resetAll').addEventListener('click', () => {
            if (confirm('Es-tu s√ªr de vouloir r√©initialiser TOUTES les donn√©es ? Cette action est irr√©versible !')) {
                localStorage.clear();
                location.reload();
            }
        });

        // ============ INITIALIZATION ============
        loadCheckboxState();
        updateStats();
    </script>
</body>
</html>
